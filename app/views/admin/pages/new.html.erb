<div class="main">
<%= form_with model: [:admin, @page], html: { class: 'page-form' } do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_area :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.rich_text_area :body, class: 'form-control' %>
  </div>

  <%= form.submit 'Save', class: 'btn btn-submit' %>
<% end %>
</div>
