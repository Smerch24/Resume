<div class="main">
<%= link_to 'Back', admin_pages_path %>
<%= form_with model: [:admin, @page], html: { class: 'page-form' } do |page| %>
  <div class="form-group">
    <%= page.label :title %><br>
    <%= page.text_field :title, class: 'form-control title-control' %>
  </div>
  
  <div class="form-group">
    <%= page.label :body %><br>
    <%= page.rich_text_area :body, class: 'form-control rich-text-area' %>
  </div>
  
  <div>
    <%= page.submit 'Save', class: 'btn btn-submit' %>
  </div>
<% end %>
</div>
