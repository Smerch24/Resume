<h1><%= @page.title %></h1>
<p><%= @page.body %></p>
<%= link_to 'Back', admin_pages_path %>

<h2>Comments:</h2>
<div class="comments">
  <% @comments.each do |form| %>
  <table>
    <td><%= button_to 'delete', [@page, form], method: :delete, class: "delete-btn" %><th><%= form.author %>: <%= form.content %></th></td>
  </table>
  <% end %>
</div>
